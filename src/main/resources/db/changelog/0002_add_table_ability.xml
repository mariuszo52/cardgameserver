<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="0002" author="mariuszo52">
        <createTable tableName="ability">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="change_type" type="enum ('MANA', 'HEALTH', 'ATTACK')"/>
            <column name="change_value" type="int"/>
            <column name="change_to_value" type="int"/>
            <column name="active_for_turns" type="int"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
