<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="0004" author="mariuszo52">
        <createTable tableName="card">
            <column name="id" type="integer">
                <constraints unique="true" primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="rarity" type="enum ('COMMON', 'RARE', 'EPIC', 'LEGENDARY')"/>
            <column name="image_link" type="TEXT">c
                <constraints nullable="false"/>
            </column>
            <column name="card_type" type="ENUM('SPELL', 'MANA_SOURCE')"/>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="attack" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="serial_number" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="card_fraction">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="card_id" type="integer">
                <constraints foreignKeyName="fk_card_2"
                             referencedTableName="card"
                             referencedColumnNames="id"/>
            </column>
            <column name="fraction_id" type="bigint">
                <constraints foreignKeyName="fk_fraction_2"
                             referencedTableName="fraction"
                             referencedColumnNames="id"/>
            </column>
            <column name="play_cost" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
